<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFrameworks>netstandard2.0;netstandard2.1;net6.0;net8.0;net10.0</TargetFrameworks>
    <AssemblyName>Karambolo.Extensions.Logging.File.Json</AssemblyName>
    <RootNamespace>Karambolo.Extensions.Logging.File.Json</RootNamespace>
    <IsTrimmable Condition="$([MSBuild]::IsTargetFrameworkCompatible('$(TargetFramework)', 'net5.0'))">true</IsTrimmable>
    <IsAotCompatible Condition="$([MSBuild]::IsTargetFrameworkCompatible('$(TargetFramework)', 'net7.0'))">true</IsAotCompatible>
    <EnableConfigurationBindingGenerator Condition="$([MSBuild]::IsTargetFrameworkCompatible('$(TargetFramework)', 'net8.0'))">true</EnableConfigurationBindingGenerator>

    <PackageId>Karambolo.Extensions.Logging.File.Json</PackageId>
    <Description>JSON structured logging features for the Karambolo.Extensions.Logging.File library.</Description>
    <PackageTags>filelogger logger logging json</PackageTags>
  </PropertyGroup>

  <ItemGroup>
    <NuGetAuditSuppress Include="https://github.com/advisories/GHSA-ghhp-997w-qr28" />
  </ItemGroup>

  <ItemGroup>
    <Compile Remove="**\*.net*.cs" />
    <!-- Workaround https://github.com/dotnet/project-system/issues/935 -->
    <None Include="**\*.net*.cs" Exclude="$(BaseIntermediateOutputPath)**" />
    <Compile Include="**\*.$(TargetFramework).cs" Exclude="$(BaseIntermediateOutputPath)**" />
  </ItemGroup>

  <Choose>
    <When Condition="'$(TargetFramework)' == 'netstandard2.0'">
      <ItemGroup>
        <PackageReference Include="System.Text.Json" Version="4.6.0" />
      </ItemGroup>
    </When>

    <When Condition="'$(TargetFramework)' == 'netstandard2.1'">
      <ItemGroup>
        <PackageReference Include="System.Text.Json" Version="4.6.0" />
      </ItemGroup>
    </When>
  </Choose>

  <ItemGroup>
    <PackageReference Include="ConfigureAwaitChecker.Analyzer" Version="5.0.0.1">
      <PrivateAssets>all</PrivateAssets>
      <IncludeAssets>runtime; build; native; contentfiles; analyzers</IncludeAssets>
    </PackageReference>
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\FileLogger\FileLogger.csproj" />
  </ItemGroup>

  <ItemGroup>
    <InternalsVisibleTo Include="$(AssemblyName).Test, " />
  </ItemGroup>

</Project>
